<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgStory"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvStoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bói toán"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/imgStory"
        app:layout_constraintTop_toTopOf="@id/imgStory"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvStoryDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mô tả ngắn..."
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:textColor="#666666"
        app:layout_constraintStart_toEndOf="@id/imgStory"
        app:layout_constraintTop_toBottomOf="@id/tvStoryTitle"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
